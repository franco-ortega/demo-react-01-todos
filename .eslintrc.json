{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
   }
  },
  "plugins": [
    "react"
  ],
  "parser": "@babel/eslint-parser",
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": "warn",
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
  }
}